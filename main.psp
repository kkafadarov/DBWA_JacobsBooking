    <!-- /#wrapper -->

    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function(e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
            $("#change_dir").toggleClass("glyphicon glyphicon-chevron-left").toggleClass("glyphicon glyphicon-chevron-right");
        });
    </script>

