    <body ng-app="jBook">

        <div id="wrapper">

            <!-- Sidebar -->
            <div id="sidebar-wrapper">
                <ul class="sidebar-nav">
                    <li class="sidebar-brand">
                        JacobsBooking
                    </li>
                    <li>
                        <a href="#">Book items</a>
                    </li>
                    <li>
                        <a href="#">My Bookables</a>
                    </li>
                    <li>
                        <a href="#">Manage Objects</a>
                    </li>
